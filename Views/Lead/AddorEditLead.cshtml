@model LeadModel


<div class="section-header">
    <div class="d-flex justify-content-between w-100">
        <h1>Leades</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active display-4"><a asp-action="Leades" asp-controller="Lead">Leads</a></div>
            <div class="breadcrumb-item display-4">AddorEditLead</div>
        </div>


    </div>
</div>
<div class="section-body">
    <form asp-action="AddorEditLead">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Row 1: FullName, TopicName -->
        <div class="row">
            <div class="form-group col-md-4 col-12 d-none">
                @Html.LabelFor(t => t.Id, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.Id, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.Id, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.FirstName, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.FirstName, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.LastName, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.LastName, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.TopicName, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.TopicName, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.TopicName, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Row 4: CompanyName, JobTitle -->
        <div class="row">
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.CompanyName, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.CompanyName, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.CompanyName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.JobTitle, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.JobTitle, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.JobTitle, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4 col-12">
                @Html.LabelFor(t => t.EstimatedBudget, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.EstimatedBudget, "", new { htmlAttributes = new { type = "number", @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.EstimatedBudget, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Row 5: EmailAddress, Telephone -->
        <div class="row">
            <div class="form-group col-md-6 col-12">
                @Html.LabelFor(t => t.EmailAddress, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.EmailAddress, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.EmailAddress, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-6 col-12">
                @Html.LabelFor(t => t.Telephone, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.Telephone, "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.Telephone, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Row 6: AccountName, ContactName -->
        <div class="row">
            <div class="form-group col-6">
                @Html.LabelFor(t => t.AccountName, htmlAttributes: new { @class = "form-label" })
                <select asp-items="Model.AccountList" asp-for="AccountID" class="form-control">
                    <option value="">--Please Select Account--</option>
                </select>
                @Html.ValidationMessageFor(t => t.ContactID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-6">
                @Html.LabelFor(t => t.ContactName, htmlAttributes: new { @class = "form-label" })
                <select asp-items="Model.ContactList" asp-for="ContactID" class="form-control">
                    <option value="">--Please Select Contact--</option>
                </select>
                @Html.ValidationMessageFor(t => t.ContactID, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Row 7: EstimatedBudget, Description -->
        <div class="row">

            <div class="form-group col-12">
                @Html.LabelFor(t => t.Description, htmlAttributes: new { @class = "form-label" })
                @Html.TextAreaFor(t => t.Description, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group w-100 text-center">
            <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
            <a asp-action="Leades" asp-controller="Lead" class="btn btn-secondary btn-lg text-dark ">Back</a>
        </div>
    </form>

</div>