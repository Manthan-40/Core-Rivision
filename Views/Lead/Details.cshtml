@model LeadModel


<div class="section-header">
    <div class="d-flex justify-content-between w-100">
        <h1>Leades</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active display-4"><a asp-action="Leades" asp-controller="Lead">Leads</a></div>
            <div class="breadcrumb-item display-4">Details</div>
        </div>


    </div>
</div>
