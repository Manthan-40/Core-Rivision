            <div class="form-group col-6">
                @Html.LabelFor(t => t.FullName, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(t => t.FullName, "", new { htmlAttributes = new { @class = "form-control", disabled = true } })
                @Html.ValidationMessageFor(t => t.FullName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-6">
                @Html.LabelFor(t => t.TopicName, htmlAttributes: new { @class = "form-label" })
