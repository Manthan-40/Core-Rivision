        let leadTable;
        $(document).ready(function () {
            leadTable = $("#table-1").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": '@Url.Action("LoadLeadList","Lead")',
                    "type": "POST",
                    "datatype": "json",
                },
                "columnDefs": [{
                    "targets": [2,3],
                    searchable: false
                }, {
                        "targets": [4],
                    searchable: false,
                    orderable: false
                    }],
                "columns": [
                    { "data": "topicName", "name": "subject", "autoWidth": true },
                    { "data": "fullName", "name": "fullname", "autoWidth": true },
                    {
                        "data": "status", "name": "satecode", "autoWidth": true,
                        render: function (data) {
                            if (data == '@LeadStateCode.Open.ToString()')
                            {
                                return `<div class="badge badge-warning">${data}</div>`
                            }
                            else if (data == '@LeadStateCode.Qualified.ToString()')
                            {
                                return `<div class="badge badge-success">${data}</div>`
                            }
                            else
                            {
                                return `<div class="badge badge-danger">${data}</div>`
                            }
                        }
                    },
                    {
                        "data": "createdON", "name": "modifiedon", "autoWidth": true,
                        render: function (data) {
                            let date = new Date(data.split('T')[0]);
                            return date.toLocaleDateString()
                        }
                    },
                    {
                        render: function (data, type, full, meta) {
                            let ReturnHtml = `<div class="w-100 d-flex justify-content-center">
                                <button class="btn btn-primary mx-2" onclick="Details('${full.id}')" data-toggle="tooltip" data-original-title="Lead information"><i class="fas fa-eye"></i></button>
                                `
                            if (full.status == '@LeadStateCode.Open.ToString()') {
                                ReturnHtml += `<button class="btn btn-info mx-2" onclick="Edit('${full.id}')" data-toggle="tooltip" data-original-title="Edit this Lead"><i class="fas fa-edit"></i></button><button class="btn btn-warning mx-2" onclick="QualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Qualify Lead"><i class="fas fa-check"></i></button><button class="btn btn-danger mx-2" onclick="disqualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Disquality Lead"><i class="fas fa-times"></i></button>`
                            }
                            ReturnHtml += `<button class="btn btn-dark mx-2" onclick="deleteLead('${full.id}')" data-toggle="tooltip" data-original-title="Delete this lead"><i class="fas fa-trash"></i></button></div>`;
                            return ReturnHtml
    //                        return `<div class="w-100 d-flex justify-content-center">
    //<button class="btn btn-primary mx-2" onclick="alert('${full.id}')" data-toggle="tooltip" data-original-title="Lead information"><i class="fas fa-eye"></i></button>
    //<button class="btn btn-warning mx-2" onclick="QualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Qualify Lead"><i class="fas fa-check"></i></button>
    //<button class="btn btn-danger mx-2" onclick="disqualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Disquality Lead"><i class="fas fa-times"></i></button
                        }
                    }
                ]
            });
            $(document).ajaxComplete(function () {
                // Required for Bootstrap tooltips in DataTables
                $('[data-toggle="tooltip"]').tooltip({
                    "html": true,
                    "delay": { "show": 200, "hide": 0 },
                });
            });
        });
            function QualifyLead(id) {
                Taskid = id;
                $('#mainscreen').show();
                $(document.body).addClass('no-scroll');

                $.ajax({
                    url: '/Lead/LeadQualification/',
                    data: { leadId: Taskid },
                    type: "Post",
                    success: (r) => {
                        $('#mainscreen').hide();
                        $(document.body).removeClass('no-scroll');
                        iziToast.success({
                            title: 'Success :',
                            message: r,
                            position: 'topRight'
                        });
                        leadTable.ajax.reload(null,false);
                    },
                    error: (r) => {
                        debugger
                        if (r.status == 400) {
                            $('#mainscreen').hide();
                            $(document.body).removeClass('no-scroll');
                            iziToast.error({
                                title: 'Error :',
                                message: r.responseText,
                                position: 'topRight'
                            });
                        }
                    }
                })
        }

        function disqualifyLead(id) {
            $('#mainscreen').show();
            $(document.body).addClass('no-scroll');
            Taskid = id

            $.ajax({
                url: '/Lead/LeadDisqualification/',
                data: { leadId: Taskid },
                type: "Post",
                success: (r) => {
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    debugger
                    iziToast.success({
                        title: 'Success :',
                        message: r,
                        position: 'topRight'
                    });
                    leadTable.ajax.reload(null, false);
                },
                error: (r) => {
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    debugger
                    if (r.status == 400) {
                        iziToast.error({
                            title: 'Error :',
                            message: r.responseText,
                            position: 'topRight'
                        });
                    }
                }
            })
        }

        function Details(id) {
            window.location.href = '/Lead/Details?leadId=' + id;
        }

        function Edit(id) {
            window.location.href = '/Lead/AddorEditLead?leadId=' + id;
        }

        function deleteLead (id) {
    swal({
        title: 'Are you sure?',
        text: 'Are you sure you want to delete this quote?',
        icon: 'warning',
        buttons: true,
        dangerMode: true,
    })
        .then((willDelete) => {
            if (willDelete) {
                $('#mainscreen').show();
                $(document.body).addClass('no-scroll')
                $.ajax({
                    url: '@Url.Action("DeleteLead", "Lead")',
                    data: { leadId: id},
                    type: "Post",
                    success: (r) => {
                        //debugger
                        $('#mainscreen').hide();
                        $(document.body).removeClass('no-scroll');
                        iziToast.success({
                            title: 'Success :',
                            message: r,
                            position: 'topRight'
                        });
                        leadTable.ajax.reload(null, false);
                    },
                    error: (r) => {
                        $('#mainscreen').hide();
                        $(document.body).removeClass('no-scroll');
                        //debugger
                        if (r.status == 400) {
                            iziToast.error({
                                title: 'Error :',
                                message: r.responseText,
                                position: 'topRight'
                            });
                        }
                    }
                })
            }
        });

}
    </script>
}