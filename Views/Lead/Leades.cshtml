
<main>
    <div class="section-header">
        <h1>Home</h1>
    </div>
    <div class="section-body">
        <table class="table table-bordered" id="table-1" style="width:100%">
            <thead clas>
                <tr>
                    <th>Topic</th>
                    <th>Full Name</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</main>




@section Scripts{

    <script src="~/assets/modules/datatables/datatables.min.js"></script>
    <script src="~/assets/modules/datatables/DataTables-1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/modules/datatables/Select-1.2.4/js/dataTables.select.min.js"></script>
    <script src="~/assets/modules/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/modules/izitoast/js/iziToast.min.js"></script>

    <script>
        let leadTable;
        $(document).ready(function () {
            leadTable = $("#table-1").DataTable({
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Lead/LoadLeadList",
                    "type": "POST",
                    "datatype": "json",
                },
                "columnDefs": [{
                    "targets": [2,3],
                    searchable: false
                }, {
                        "targets": [4],
                    searchable: false,
                    orderable: false
                    }],
                "columns": [
                    { "data": "topicName", "name": "TopicName", "autoWidth": true },
                    { "data": "fullName", "name": "FullName", "autoWidth": true },
                    {
                        "data": "status", "name": "Status", "autoWidth": true,
                        render: function (data) {
                            if (data == '@LeadStateCode.Open.ToString()') {
                                return `<div class="badge badge-warning">${data}</div>`
                            }
                            else if (data == '@LeadStateCode.Qualified.ToString()') {
                                return `<div class="badge badge-success">${data}</div>`
                            }
                            else{
                                return `<div class="badge badge-danger">${data}</div>`
                            }
                        }
                    },
                    {
                        "data": "createdON", "name": "CreatedON", "autoWidth": true,
                        render: function (data) {
                            let date = new Date(data.split('T')[0]);
                            return date.toLocaleDateString()
                        }
                    },
                    {
                        render: function (data, type, full, meta) {
                            let ReturnHtml = `<div class="w-100 d-flex justify-content-center">
                                <button class="btn btn-primary mx-2" onclick="alert('${full.id}')" data-toggle="tooltip" data-original-title="Lead information"><i class="fas fa-eye"></i></button>`
                            if (full.status == '@LeadStateCode.Open.ToString()') {
                                ReturnHtml += `<button class="btn btn-warning mx-2" onclick="QualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Qualify Lead"><i class="fas fa-check"></i></button><button class="btn btn-danger mx-2" onclick="disqualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Disquality Lead"><i class="fas fa-times"></i></button></div>`
                                }
                            return ReturnHtml
    //                        return `<div class="w-100 d-flex justify-content-center">
    //<button class="btn btn-primary mx-2" onclick="alert('${full.id}')" data-toggle="tooltip" data-original-title="Lead information"><i class="fas fa-eye"></i></button>
    //<button class="btn btn-warning mx-2" onclick="QualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Qualify Lead"><i class="fas fa-check"></i></button>
    //<button class="btn btn-danger mx-2" onclick="disqualifyLead('${full.id}')" data-toggle="tooltip" data-original-title="Disquality Lead"><i class="fas fa-times"></i></button
                        }
                    }
                ]
            });
            $(document).ajaxComplete(function () {
                // Required for Bootstrap tooltips in DataTables
                $('[data-toggle="tooltip"]').tooltip({
                    "html": true,
                    "delay": { "show": 200, "hide": 0 },
                });
            });
        });
            function QualifyLead(id) {
                Taskid = id

                $.ajax({
                    url: '/Lead/LeadQualification/' + Taskid,
                    data: { leadId: Taskid },
                    type: "Post",
                    success: (r) => {
                        iziToast.success({
                            title: 'Success :',
                            message: r,
                            position: 'topRight'
                        });
                        leadTable.ajax.reload();
                    },
                    error: (r) => {
                        debugger
                        if (r.status == 400) {
                            iziToast.error({
                                title: 'Error :',
                                message: r.responseText,
                                position: 'topRight'
                            });
                        }
                    }
                })
        }

        function disqualifyLead(id) {
            Taskid = id

            $.ajax({
                url: '/Lead/LeadDisqualification/',
                data: { leadId: Taskid },
                type: "Post",
                success: (r) => {
                    debugger
                    iziToast.success({
                        title: 'Success :',
                        message: r,
                        position: 'topRight'
                    });
                    leadTable.ajax.reload();
                },
                error: (r) => {
                    debugger
                    if (r.status == 400) {
                        iziToast.error({
                            title: 'Error :',
                            message: r.responseText,
                            position: 'topRight'
                        });
                    }
                }
            })
        }
    </script>
}