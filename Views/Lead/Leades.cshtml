
<main>
    <div class="section-header">
        <div class="d-flex justify-content-between w-100">
            <h1>Leades</h1>
            <div class="mb-3 text-center"><a class="btn btn-primary text-light" asp-action="AddorEditLead" asp-controller="Lead"><i class="fas fa-plus"></i> Add Lead</a></div>

        </div>
        @*<div>


            </div>*@
    </div>
    <div class="section-body">
        <table class="table table-bordered" id="table-1" style="width:100%">
            <thead clas>
                <tr>
                    <th>Topic</th>
                    <th>Full Name</th>
