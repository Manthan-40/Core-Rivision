
<main>
    <div class="section-header">
        <h1>Home</h1>
    </div>
    <div class="section-body">
        <table class="table table-bordered" id="table-1" style="width:100%">
            <thead clas>
                <tr>
                    <th>Quote Number</th>
                    <th>Quote Name</th>
                    <th>TotalAmount</th>
                    <th>Status</th>
                    <th>Created On</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</main>




@section Scripts{

    <script src="~/assets/modules/datatables/datatables.min.js"></script>
    <script src="~/assets/modules/datatables/DataTables-1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/modules/datatables/Select-1.2.4/js/dataTables.select.min.js"></script>
    <script src="~/assets/modules/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/assets/modules/sweetalert/sweetalert.min.js"></script>
    <script src="~/assets/modules/izitoast/js/iziToast.min.js"></script>

    <script>
        let opportunityTable;
        $(document).ready(function () {
            opportunityTable = $("#table-1").DataTable({
                "processing": true,
                "serverSide": true,
                //"bStateSave":true,
                "filter": true,
                "ajax": {
                    "url": "/Quote/LoadQuoteList",
                    "type": "POST",
                    "datatype": "json",
                },
                "columnDefs": [{
                    "targets": [2,3],
                    searchable: false
                }, {
                        "targets": [5],
                    searchable: false,
                    orderable: false
                    }],
                "columns": [
                    { "data": "quoteNumber", "name": "QuoteNumber", "autoWidth": true },
                    { "data": "quoteName", "name": "QuoteName", "autoWidth": true },
                    {
                        "data": "totalAmount", "name": "TotalAmount", "autoWidth": true,
                        render: function (data) {
                            if (data == null) {
                                return `<b>Amount is not available</b>`
                            }
                            else {
                                return `$ ${parseFloat(data).toFixed(2)}`;
                            }
                        }
                    },
                    {
                        "data": "status", "name": "Status", "autoWidth": true,
                        render: function (data) {
                            if (data == '@QuoteStateCode.Draft.ToString()')
                            {
                                return `<div class="badge badge-warning">${data}</div>`
                            }
                            else if (data == '@QuoteStateCode.Active.ToString()')
                            {
                                return `<div class="badge badge-info">${data}</div>`
                            }
                            else if (data == '@QuoteStateCode.Closed.ToString()')
                            {
                                return `<div class="badge badge-danger">${data}</div>`
                            }
                             else if (data == '@QuoteStateCode.Won.ToString()')
                             {
                                 return `<div class="badge badge-success">${data}</div>`
                             }
                        }
                    },
                    {
                        "data": "createdOn", "name": "CreatedOn", "autoWidth": true,
                        render: function (data) {
                            let date = new Date(data.split('T')[0]);
                            return date.toLocaleDateString()
                        }
                    },
                    {
                        render: function (data, type, full, meta) {
                            let ReturnHtml = `<div class="w-100 d-flex justify-content-center">
                                <button class="btn btn-primary mx-2" onclick="TostExample('${full.quoteId}')" data-toggle="tooltip" data-original-title="Quote information"><i class="fas fa-eye"></i></button>`
                            if (full.status == '@QuoteStateCode.Draft.ToString()') {
                                ReturnHtml += `<button class="btn btn-info mx-2" onclick="activateQuote('${full.quoteId}')" data-toggle="tooltip" data-original-title="ActivateQuote"><i class="fas fa-file-alt"></i></button>`
                            }
                            if (full.status == '@QuoteStateCode.Closed.ToString()') {
                                ReturnHtml += `<button class="btn btn-info mx-2" onclick="reviseQuote('${full.quoteId}')" data-toggle="tooltip" data-original-title="Revise Quote"><i class="fas fa-file-signature"></i></button>`
                            }
                            if (full.status == '@QuoteStateCode.Active.ToString()') {
                                ReturnHtml += `<button class="btn btn-warning mx-2" onclick="winQuote('${full.quoteId}','${full.quoteNumber}')" data-toggle="tooltip" data-original-title="Won Quote Create Order"><i class="fas fa-check"></i></button><button class="btn btn-danger mx-2" onclick="quoteCloseasLost('${full.quoteId}','${full.quoteNumber}')" data-toggle="tooltip" data-original-title="Close Quote as Lost"><i class="fas fa-times"></i></button>`
                            }
                            ReturnHtml += `
                                <button class="btn btn-dark mx-2" onclick="deleteQuote('${full.quoteId}','${full.quoteNumber}')" data-toggle="tooltip" data-original-title="Quote information"><i class="fas fa-trash"></i></button>`
                            return ReturnHtml
                        }
                    }
                ]
            });
            $(document).ajaxComplete(function () {
                // Required for Bootstrap tooltips in DataTables
                $('[data-toggle="tooltip"]').tooltip({
                    "html": true,
                    "delay": { "show": 100, "hide": 0 },
                });
            });
        });
        function winQuote(id,number) {
            $('#mainscreen').show();
            $(document.body).addClass('no-scroll');
                $.ajax({
                    url: '@Url.Action("WinQuote","Quote")',
                    data: { quoteID: id, quoteNumber: number },
                    type: "Post",
                    success: (r) => {
                        $('#mainscreen').hide();
                        $(document.body).removeClass('no-scroll');
                        iziToast.success({
                            title: 'Success :',
                            message: r,
                            position: 'topRight'
                        });
                        opportunityTable.ajax.reload(null,false);
                    },
                    error: (r) => {
                        debugger
                        $('#mainscreen').hide();
                        $(document.body).removeClass('no-scroll');
                        if (r.status == 400) {
                            iziToast.error({
                                title: 'Error :',
                                message: r.responseText,
                                position: 'topRight'
                            });
                        }
                    }
                })
        }

        function quoteCloseasLost(id,number) {
            $('#mainscreen').show();
            $(document.body).addClass('no-scroll')
            Taskid = id

            $.ajax({
                url: '@Url.Action("CloseQuote", "Quote")',
                data: { quoteID: id, quoteNumber: number },
                type: "Post",
                success: (r) => {
                    debugger
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    iziToast.success({
                        title: 'Success :',
                        message: r,
                        position: 'topRight'
                    });
                    opportunityTable.ajax.reload(null, false);
                },
                error: (r) => {
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    debugger
                    if (r.status == 400) {
                        iziToast.error({
                            title: 'Error :',
                            message: r.responseText,
                            position: 'topRight'
                        });
                    }
                }
            })
        }

        function activateQuote(id) {
            $('#mainscreen').show();
            $(document.body).addClass('no-scroll')

            $.ajax({
                url: '@Url.Action("ActiveQuote", "Quote")',
                data: { quoteID: id},
                type: "Post",
                success: (r) => {
                    debugger
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    iziToast.success({
                        title: 'Success :',
                        message: r,
                        position: 'topRight'
                    });
                    opportunityTable.ajax.reload(null, false);
                },
                error: (r) => {
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    debugger
                    if (r.status == 400) {
                        iziToast.error({
                            title: 'Error :',
                            message: r.responseText,
                            position: 'topRight'
                        });
                    }
                }
            })
        }

        function reviseQuote(id) {
            $('#mainscreen').show();
            $(document.body).addClass('no-scroll')

            $.ajax({
                url: '@Url.Action("ReviseQuote", "Quote")',
                data: { quoteID: id},
                type: "Post",
                success: (r) => {
                    //debugger
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    iziToast.success({
                        title: 'Success :',
                        message: r,
                        position: 'topRight'
                    });
                    opportunityTable.ajax.reload(null, false);
                },
                error: (r) => {
                    $('#mainscreen').hide();
                    $(document.body).removeClass('no-scroll');
                    //debugger
                    if (r.status == 400) {
                        iziToast.error({
                            title: 'Error :',
                            message: r.responseText,
                            position: 'topRight'
                        });
                    }
                }
            })
        }

        function deleteQuote(id,quotenumber) {
            swal({
                title: 'Are you sure?',
                text: 'Are you sure you want to delete this quote?',
                icon: 'warning',
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $('#mainscreen').show();
                        $(document.body).addClass('no-scroll')
                        $.ajax({
                            url: '@Url.Action("DeleteQuote", "Quote")',
                            data: { quoteID: id},
                            type: "Post",
                            success: (r) => {
                                //debugger
                                $('#mainscreen').hide();
                                $(document.body).removeClass('no-scroll');
                                iziToast.success({
                                    title: 'Success :',
                                    message: r,
                                    position: 'topRight'
                                });
                                opportunityTable.ajax.reload(null, false);
                            },
                            error: (r) => {
                                $('#mainscreen').hide();
                                $(document.body).removeClass('no-scroll');
                                //debugger
                                if (r.status == 400) {
                                    iziToast.error({
                                        title: 'Error :',
                                        message: r.responseText,
                                        position: 'topRight'
                                    });
                                }
                            }
                        })
                    }
                });







        }

        function TostExample(id) {
            iziToast.success({
                theme: 'dark',
                backgroundColor: 'rgb(75, 175, 39)',
                progressBarColor: 'rgb(0, 132, 0)',
                title: 'success :',
                message: id,
                position: 'topRight'
            });


        }
    </script>
}   