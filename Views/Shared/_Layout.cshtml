<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RevisioneNew</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/RevisioneNew.styles.css" asp-append-version="true" />*@

    <link rel="stylesheet" href="~/assets/modules/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/modules/fontawesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/components.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/assets/modules/bootstrap-daterangepicker/daterangepicker.css"asp-append-version="true" >

    <link rel="stylesheet" href="~/assets/modules/izitoast/css/iziToast.min.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/assets/modules/datatables/datatables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/modules/datatables/DataTables-1.10.16/css/dataTables.bootstrap4.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/modules/datatables/Select-1.2.4/css/select.bootstrap4.min.css" asp-append-version="true" />
</head>
<body class="no-scroll">


    @Html.Partial("_loader")

    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <!-- navbar start-->
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                    </ul>

                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <img alt="image" src="~/assets/img/avatar/avatar-1.png" class="rounded-circle mr-1">
                                <div class="d-sm-none d-lg-inline-block">Hi, @User.Claims.First(e => e.Type == "name").Value  </div>
                            </a>

                            <div class="dropdown-menu dropdown-menu-right">
                                @*<div class="dropdown-title">Logged in 5 min ago</div>
                                    <div class="dropdown-divider"></div>*@
                                <a class="dropdown-item has-icon text-danger" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        }
                        else
                        {
                            <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <img alt="image" src="~/assets/img/avatar/avatar-1.png" class="rounded-circle mr-1">
                                <div class="d-sm-none d-lg-inline-block">Please Login.</div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item has-icon text-success" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">
                                    <i class="fas fa-sign-out-alt"></i> Login
                                </a>
                            </div>
                        }

                    </li>
                </ul>
            </nav>
            <!-- navbar end -->
            <!-- sidebar start -->
            <div class="main-sidebar sidebar-style-2 ">
                <aside id="sidebar-wrapper">

                    <div class="sidebar-brand">

                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">

                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">HM</a>
                    </div>
                    <ul class="sidebar-menu">

                        <li class="@(ViewBag.Home ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i><span>Home</span></a>
                        </li>
                        <li class="@(ViewBag.Privacy ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-file-invoice"></i><span>Privacy</span></a>
                        </li>
                        <li class="@(ViewBag.Lead ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Lead" asp-action="Leades"><i class="fas fa-headset"></i><span>Lead</span></a>
                        </li>
                        <li class="@(ViewBag.Opportunity ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Opportunity" asp-action="Opportunities"><i class="fas fa-folder-plus"></i><span>Opportunity</span></a>
                        </li>
                        <li class="@(ViewBag.Quote ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Quote" asp-action="Quotes"><i class="fas fa-file-invoice"></i><span>Quote</span></a>
                        </li>
                        <li class="@(ViewBag.Order ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Order"><i class="fas fa-boxes"></i><span>Order</span></a>
                        </li>
                        <li class="@(ViewBag.Invoice ?? "")">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Invoice"><i class="fas fa-file-invoice-dollar"></i><span>Invoice</span></a>
                        </li>

                    </ul>

                </aside>
            </div>


            <!-- Main Content -->
            <div class="main-content">
                <section class="section body-content">
                    @RenderBody()
                </section>
            </div>
            <!-- Main Content End -->
            <!-- footer start -->
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright &copy; 2024
                </div>
            </footer>

            <!-- footer end -->
        </div>
    </div>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/assets/modules/jquery.min.js"></script>
    <script src="~/assets/modules/popper.js"></script>
    <script src="~/assets/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/assets/modules/moment.min.js"></script>
    <script src="~/assets/js/stisla.js"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/modules/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/assets/js/page/forms-advanced-forms.js"></script>

    <script>
        $('#mainscreen').hide();
        $(document.body).removeClass('no-scroll')
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @*<script src="~/assets/modules/jquery.min.js"></script>*@
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
</body>
</html>
